#!/bin/bash

if [ -z "$BROWSER" ]; then
	BROWSER=google-chrome-launcher

	if [ -z "$DOT_BIN" ]; then
		CWD="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
		BROWSER="$CWD/$BROWSER"
	fi

	export BROWSER
fi

if [ -x "/opt/bin/skypeforlinux" ]; then
	echo "Using new skype for linux"
	SKYPE_BIN=/opt/bin/skypeforlinux
elif [ -x "/usr/bin/skypeforlinux" ]; then
	echo "Using new skype for linux"
	SKYPE_BIN=skypeforlinux
fi

$SKYPE_BIN "@$"
