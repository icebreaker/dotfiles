%html
  %head
    %title=title
    :css
      body
      {
        margin: 0;
        padding: 50px;
        color: #ffffff;
        background-color: #36474c;
        font-family: 'Meslo LG M', 'Droid Sans Mono';
        font-size: 30px;
        font-weight: bold;
        cursor: none;
        overflow: hidden;
      }
      h1
      {
        text-align: center;
      }
      .slide
      {
        display: none;
      }
      .slide.active
      {
        display: inherit;
      }
      .slide .number
      {
        position: absolute;
        right: 30px;
        bottom: 30px;
      }
    :javascript
      function go(dir)
      {
        var active = document.querySelector('.active');
        if(active == null) return;

        var el = active[dir + "ElementSibling"];
        if(el == null) return;

        active.classList.remove('active');
        el.classList.add('active');
      }

      window.onkeyup = function(e)
      {
        switch(e.which ? e.which : e.keyCode)
        {
          case 39:
            go('next');
            break;

          case 37:
            go('previous');
            break;
        }
      }
  %body
    - slides.each do |slide|
      %div{ class: slide.classes }= slide.content
